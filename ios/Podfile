# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods plugins setup.
(load File.join(File.dirname(__FILE__), 'Flutter', 'podhelper.rb')) if File.exist?(File.join(File.dirname(__FILE__), 'Flutter', 'podhelper.rb'))

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(__FILE__)
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Fix for any potential deployment target issues in dependencies
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
